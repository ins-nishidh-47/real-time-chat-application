{
    "version": 2,
    "builds": [
      {
        "src": "index.html", 
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"  
        }
      },
      {
        "src": "api/index.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },  
      { "src": "/(.*)", "dest": "/index.html" }   
    ]
  }
  
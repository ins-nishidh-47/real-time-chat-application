{
    "version": 2,
    "builds": [
      {
        "src": "api/index.js", 
        "use": "@vercel/node"
      },
      {
        "src": "vite.config.js",  
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/index.html" }  
    ]
  }
  